# ===========================================
# WARIZMY EDUCATION - Umgebungsvariablen
# ===========================================
# Kopiere diese Datei nach .env und passe die Werte an
# cp env.example .env

# -------------------------------------------
# ALLGEMEIN
# -------------------------------------------
NODE_ENV=production
API_URL=https://ac.warizmy.com/api

# -------------------------------------------
# DATENBANK (PostgreSQL)
# -------------------------------------------
DB_USER=warizmy
DB_PASSWORD=CHANGE_ME_STRONG_PASSWORD

# -------------------------------------------
# JWT & SECRETS
# -------------------------------------------
# Generiere mit: openssl rand -hex 32
JWT_SECRET=CHANGE_ME_JWT_SECRET_64_CHARS_MIN

# -------------------------------------------
# OPENAI (für KI-Features - Optional)
# -------------------------------------------
OPENAI_API_KEY=sk-xxx

# -------------------------------------------
# ANTHROPIC (für Vokabel-Generierung)
# -------------------------------------------
ANTHROPIC_API_KEY=sk-ant-xxx

# -------------------------------------------
# MINIO / S3 / Cloudflare R2 (Datei-Speicher)
# -------------------------------------------
MINIO_ENDPOINT=<account-id>.r2.cloudflarestorage.com
MINIO_ACCESS_KEY=your-access-key-id
MINIO_SECRET_KEY=your-secret-access-key
MINIO_BUCKET_NAME=warizmy-uploads
MINIO_USE_SSL=true
# Cloudflare R2 Public URL (für öffentliche Bild-URLs)
MINIO_PUBLIC_URL=https://pub-xxx.r2.dev

# Für lokale Entwicklung mit Docker MinIO:
# MINIO_ENDPOINT=localhost:9000
# MINIO_ROOT_USER=minioadmin
# MINIO_ROOT_PASSWORD=minioadmin123

# -------------------------------------------
# STRIPE (Zahlungen)
# -------------------------------------------
STRIPE_PUBLIC_KEY=pk_test_xxx
STRIPE_SECRET_KEY=sk_test_xxx
STRIPE_WEBHOOK_SECRET=whsec_xxx

# -------------------------------------------
# PAYPAL (Zahlungen)
# -------------------------------------------
PAYPAL_CLIENT_ID=xxx
PAYPAL_CLIENT_SECRET=xxx
PAYPAL_MODE=sandbox  # oder 'live' für Produktion

# -------------------------------------------
# ZOOM (Live-Unterricht)
# -------------------------------------------
ZOOM_ACCOUNT_ID=xxx
ZOOM_CLIENT_ID=xxx
ZOOM_CLIENT_SECRET=xxx

# -------------------------------------------
# VIMEO (Video-Hosting)
# -------------------------------------------
VIMEO_ACCESS_TOKEN=xxx

# -------------------------------------------
# E-MAIL (SMTP)
# -------------------------------------------
SMTP_HOST=smtp.resend.com
SMTP_PORT=587
SMTP_USER=resend
SMTP_PASSWORD=re_xxx
EMAIL_FROM=noreply@warizmy.com
EMAIL_FROM_NAME=WARIZMY Education

# -------------------------------------------
# REDIS
# -------------------------------------------
REDIS_URL=redis://redis:6379/0

# -------------------------------------------
# CORS (Cross-Origin Resource Sharing)
# -------------------------------------------
# Komma-separierte Liste der erlaubten Origins
CORS_ORIGINS=https://ac.warizmyacademy.de,https://www.warizmyacademy.de,https://warizmyacademy.de

# -------------------------------------------
# SENTRY (Error Tracking - Optional)
# -------------------------------------------
SENTRY_DSN=
