# ===========================================
# WARIZMY EDUCATION - Umgebungsvariablen
# ===========================================
# Kopiere diese Datei nach .env und passe die Werte an
# cp env.example .env

# -------------------------------------------
# ALLGEMEIN
# -------------------------------------------
NODE_ENV=production
API_URL=https://ac.warizmy.com/api
STRAPI_PUBLIC_URL=https://ac.warizmy.com/cms

# -------------------------------------------
# DATENBANK (PostgreSQL)
# -------------------------------------------
DB_USER=warizmy
DB_PASSWORD=CHANGE_ME_STRONG_PASSWORD

# -------------------------------------------
# JWT & SECRETS
# -------------------------------------------
# Generiere mit: openssl rand -hex 32
JWT_SECRET=CHANGE_ME_JWT_SECRET_64_CHARS_MIN

# -------------------------------------------
# STRAPI SECRETS
# -------------------------------------------
# Generiere alle mit: openssl rand -base64 32
STRAPI_JWT_SECRET=CHANGE_ME_STRAPI_JWT
STRAPI_ADMIN_JWT_SECRET=CHANGE_ME_STRAPI_ADMIN_JWT
STRAPI_APP_KEYS=key1,key2,key3,key4
STRAPI_API_TOKEN_SALT=CHANGE_ME_API_TOKEN_SALT

# -------------------------------------------
# MINIO (S3-kompatibler Speicher)
# -------------------------------------------
MINIO_ROOT_USER=minioadmin
MINIO_ROOT_PASSWORD=CHANGE_ME_MINIO_PASSWORD

# -------------------------------------------
# STRIPE (Zahlungen)
# -------------------------------------------
STRIPE_PUBLIC_KEY=pk_test_xxx
STRIPE_SECRET_KEY=sk_test_xxx
STRIPE_WEBHOOK_SECRET=whsec_xxx

# -------------------------------------------
# PAYPAL (Zahlungen)
# -------------------------------------------
PAYPAL_CLIENT_ID=xxx
PAYPAL_CLIENT_SECRET=xxx
PAYPAL_MODE=sandbox  # oder 'live' f√ºr Produktion

# -------------------------------------------
# ZOOM (Live-Unterricht)
# -------------------------------------------
ZOOM_ACCOUNT_ID=xxx
ZOOM_CLIENT_ID=xxx
ZOOM_CLIENT_SECRET=xxx

# -------------------------------------------
# VIMEO (Video-Hosting)
# -------------------------------------------
VIMEO_ACCESS_TOKEN=xxx

# -------------------------------------------
# E-MAIL (SMTP)
# -------------------------------------------
SMTP_HOST=smtp.resend.com
SMTP_PORT=587
SMTP_USER=resend
SMTP_PASSWORD=re_xxx
EMAIL_FROM=noreply@warizmy.com
EMAIL_FROM_NAME=WARIZMY Education

# -------------------------------------------
# REDIS
# -------------------------------------------
REDIS_URL=redis://redis:6379/0

# -------------------------------------------
# SENTRY (Error Tracking - Optional)
# -------------------------------------------
SENTRY_DSN=

