{
  "kind": "collectionType",
  "collectionName": "daily_guidances",
  "info": {
    "singularName": "daily-guidance",
    "pluralName": "daily-guidances",
    "displayName": "Tageshinweis",
    "description": "Islamische Tageshinweise nach Wochentag (optional Ramadan)"
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "title": {
      "type": "string",
      "maxLength": 120
    },
    "text": {
      "type": "text",
      "required": true,
      "maxLength": 1000
    },
    "weekday": {
      "type": "enumeration",
      "enum": [
        "monday",
        "tuesday",
        "wednesday",
        "thursday",
        "friday",
        "saturday",
        "sunday",
        "everyday"
      ],
      "default": "everyday",
      "required": true
    },
    "ramadan_mode": {
      "type": "enumeration",
      "enum": ["only", "exclude", "both"],
      "default": "both",
      "required": true
    },
    "is_active": {
      "type": "boolean",
      "default": true
    },
    "priority": {
      "type": "integer",
      "default": 0,
      "min": 0,
      "max": 100
    },
    "start_date": {
      "type": "datetime"
    },
    "end_date": {
      "type": "datetime"
    },
    "link_url": {
      "type": "string",
      "maxLength": 500
    },
    "link_text": {
      "type": "string",
      "default": "Mehr erfahren",
      "maxLength": 80
    }
  }
}


